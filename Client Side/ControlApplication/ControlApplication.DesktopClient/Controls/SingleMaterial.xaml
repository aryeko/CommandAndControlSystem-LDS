<UserControl x:Class="ControlApplication.DesktopClient.Controls.SingleMaterial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlApplication.DesktopClient.Controls"
             mc:Ignorable="d" 
             Height="NaN" Width="400">
    <Grid x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" x:Name="dataName" HorizontalAlignment="Center" FontSize="15"/>
        <Label Grid.Row="0" Grid.Column="1" x:Name="dataType" HorizontalAlignment="Center" FontSize="15"/>
        <Label Grid.Row="0" Grid.Column="2" x:Name="dataCas" HorizontalAlignment="Center" FontSize="15"/>

    </Grid>
</UserControl>
