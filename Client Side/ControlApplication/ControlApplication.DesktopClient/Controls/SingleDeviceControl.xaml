<UserControl x:Class="ControlApplication.DesktopClient.Controls.SingleDeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlApplication.DesktopClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="NaN" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4.5*"/>
            <ColumnDefinition Width="4.5*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" x:Name="StatusIcon" Grid.Column="0" Source="../Drawable/device_status_green.png" Height="32" Margin="0,0,0,0" Width="22" RenderTransformOrigin="0.5,0.65"/>
        <Label Grid.Row="0" Grid.Column="1" x:Name="LblMac" Content="MAC" HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Center"/>
        <Label Grid.Row="0" Grid.Column="2" x:Name="LblIp" Content="IP" HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
